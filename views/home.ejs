<%- include("partials/header") -%>
<h1>Home</h1>
<p><%= content %></p>

<% if (option=== 1) { %>
<h2 class="rm">BE CAREFUL, THIS PROCESS CANNOT BE UNDONE</h2>    
<% post.forEach(function (element){ %>
<h1><%= element.date %> </h1>
<p><%= element.topic %></p>
<a class="rm" href="/remove/<%= element.Topic %>">Remove</a>
<% });%>

<%} else { %>
<% post.forEach(function (element){ %>
<h1><%= element.date %> </h1>
<p><%= element.Topic %>  <a href="/posts/<%= element.Topic %>">open</a></p>
<% });%>
<% } %>



